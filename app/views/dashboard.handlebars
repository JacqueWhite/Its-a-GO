  {{!-- profile section --}}
  <div class="col s12 m6 l6">
      <div id="profile-card" class="card">
          <div class="card-image waves-effect waves-block waves-light">
              <img class="activator responsive-img" src="https://s3.us-east-2.amazonaws.com/jacqueportfolio/purty_wood_%402X.png" alt="user background">
          </div>
          <div class="card-content">
              <div class="circle responsive-img activator card-profile-image">
                  <script src="https://www.avatarapi.com/js.aspx?email={{this.email}}&size=200">
                  </script>
              </div>
              </script>
              <a class="btn-floating activator btn-move-up waves-effect waves-light darken-2 right"><i class="mdi-action-account-circle"></i></a>
              <span class="card-title activator grey-text text-darken-4">{{this.firstname}}</span>
              <p><i class="mdi-communication-email cyan-text text-darken-2"></i>{{this.email}}</p>
          </div>
          <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">{{this.firstname}}<i class="mdi-navigation-close right"></i></span>
              <p>Here is some more information about this card.</p>
              <p><i class="mdi-communication-email cyan-text text-darken-2"></i>{{this.email}}</p>
              <p><i class="mdi-social-cake cyan-text text-darken-2"></i> 18th June 1990</p>
              <p><i class="mdi-device-airplanemode-on cyan-text text-darken-2"></i> BAR - AUS</p>
          </div>
      </div>
  </div>

  <div class="col s12 m6 m6">
    <div id="profile-card" class="card">
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">Upcoming Events</span>
